
@{
    Layout = null;
}

@using MVCBlogSitesi.DAL.Entities
@model Users

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PasswordReset</title>
    @System.Web.Optimization.Styles.Render("~/bundles/adminstyles")
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Parola Resetle</div>
            <div class="card-body">
                <div class="text-center mt-4 mb-5">
                    <h4>Parolamı Unuttum!</h4>
                    <p>Email adresinizi girerek formu gönderiniz. Posta kutunuza gelen mail den parolamı resetle butonu tıklayınız.</p>
                </div>
                @using (Html.BeginForm())
                {
                    <label>@ViewBag.Message</label>

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @type = "email", @placeholder = "E-Posta adresiniz", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>

                    <div class="text-center">
                        <input type="submit" class="btn btn-primary btn-block" name="name" value="Gönder" />
                    </div>
                }
            </div>
        </div>
    </div>

    @System.Web.Optimization.Scripts.Render("~/bundles/adminscripts")
</body>
</html>
