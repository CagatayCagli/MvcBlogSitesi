@using System.Web.Optimization
@using MVCBlogSitesi.DAL.Entities
@model Users


@{
    ViewBag.Title = "Hesap Oluştur";
    Layout = null;
}

<h2 style="color: antiquewhite">Hesap Oluştur</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/bundles/adminstyles")
</head>

<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Hesap Oluştur</div>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="from-row">
                            <div class="col-md-6">
                                <label>Adı :</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @type = "text", @placeholder = "Adınızı giriniz" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                            </div>
                            <div class="col-md-6">
                                <label>Soyadı :</label>
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @type = "text", @placeholder = "Soyadınızı giriniz" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.LastName)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-6">

                            <label>E-Posta :</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "ornek@ornek.com" })
                            <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="from-row">
                            <div class="col-md-6">
                                <label>Şifre :</label>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Şifre giriniz" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                            </div>
                            <div class="col-md-6">
                                <label>Şifre Tekrar :</label>
                                @Html.TextBoxFor(x => x.PasswordConfirm, new { @class = "form-control", @type = "password", @placeholder = "Tekrar Şifre" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.PasswordConfirm)</span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-primary" value="Kaydet" />
                    </div>


                }

                <div class="text-center">
                    <a class="d-block small mt-3" href="login.html">Giriş Sayfası</a>
                    <a class="d-block small" href="forgot-password.html">Şifrenizi mi Unuttunuz ?</a>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/adminscripts")


</body>
</html>

